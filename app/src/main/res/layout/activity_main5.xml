    <Button
        android:id="@+id/selectTimeBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="Select Time"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/cancelAlarmBtn"
        app:layout_constraintEnd_toEndOf="@+id/cancelAlarmBtn"
        app:layout_constraintStart_toStartOf="@+id/cancelAlarmBtn"
        app:layout_constraintTop_toBottomOf="@+id/selectedTime" />

    <Button
        android:id="@+id/cancelAlarmBtn"
        android:layout_width="361dp"
        android:layout_height="55dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="35dp"
        android:text="Cancel Alarm"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/AddImage1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTimeBtn" />

    <Button
        android:id="@+id/AddImage1"
